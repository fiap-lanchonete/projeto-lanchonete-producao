// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id        Int         @id @default(autoincrement())
  order_id  Int         @unique
  status    OrderSteps?
  cpf       Int?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @default(now())
}

enum OrderSteps {
  IN_PREPARATION
  READY
  FINISHED
}
